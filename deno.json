{
  "workspace": [
    "packages/*"
  ],
  "imports": {
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.1",
    "tsdown": "npm:tsdown@^0.12.7"
  },
  "nodeModulesDir": "none",
  "exclude": [
    "**/dist",
    "**/node_modules",
    ".env",
    ".github",
    "coverage",
    "docs",
    "junit.xml",
    "node_modules"
  ],
  "fmt": {
    "exclude": [
      "*.md",
      "**/*.md",
      "*.yaml",
      "**/*.yaml",
      "*.yml",
      "**/*.yml"
    ]
  },
  "tasks": {
    "hongdown": "deno run -A npm:hongdown@^0.1.0-dev.28",
    "check-versions": "deno run --allow-read --allow-write scripts/check_versions.ts",
    "check": {
      "dependencies": [
        "check-versions"
      ],
      "command": "deno check && deno lint && deno fmt --check && deno task hongdown --check && deno publish --dry-run --allow-dirty"
    },
    "fmt": "deno fmt && deno task hongdown --write",
    "test": "deno test --allow-env --allow-net --env-file=.env.test",
    "hooks:install": "deno run --allow-read=deno.json,.git/hooks/ --allow-write=.git/hooks/ jsr:@hongminhee/deno-task-hooks",
    "hooks:pre-commit": {
      "dependencies": [
        "check"
      ]
    }
  }
}
